<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UNSWLearning" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="titleTextColor">@color/BlackTitle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/black</item>
<!--        <item name="colorAccent">@color/gold</item> &lt;!&ndash;        color for progress bar&ndash;&gt;-->
    </style>
    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/gold</item>
    </style>

    <style name="RatingBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
</resources>