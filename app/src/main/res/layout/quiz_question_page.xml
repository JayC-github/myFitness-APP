<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="338dp"
        android:layout_height="280dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="38dp"
        android:text="Question Here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTitle" />

    <TextView
        android:id="@+id/scoreNum"
        android:layout_width="85dp"
        android:layout_height="46dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="38dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scoreTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreTitle"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="58dp"
        android:text="Score: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choice1"
        android:layout_width="336dp"
        android:layout_height="70dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="46dp"
        android:text="Choice 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionText" />

    <Button
        android:id="@+id/choice2"
        android:layout_width="336dp"
        android:layout_height="70dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="24dp"
        android:text="Choice 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice1" />

    <Button
        android:id="@+id/choice3"
        android:layout_width="336dp"
        android:layout_height="70dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="24dp"
        android:text="Choice 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice2" />

    <Button
        android:id="@+id/choice4"
        android:layout_width="336dp"
        android:layout_height="70dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="24dp"
        android:text="Choice 4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice3" />
</androidx.constraintlayout.widget.ConstraintLayout>