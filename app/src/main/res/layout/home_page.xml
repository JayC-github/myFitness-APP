<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/ivHubLesson"
        android:layout_width="120dp"
        android:layout_height="111dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/ivSelectedGroup"
        app:layout_constraintTop_toBottomOf="@+id/ivSelectedGroup"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnHubQuiz"
        android:layout_width="176dp"
        android:layout_height="100dp"
        android:onClick="startQuizHomePage"
        android:text="Quizzes"
        android:background="@drawable/border"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivHubQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/ivHubQuiz"
        app:layout_constraintTop_toTopOf="@+id/ivHubQuiz"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnHubLesson"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:onClick="startLessonHomePage"
        android:text="Lessons"
        android:background="@drawable/border"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivHubLesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivHubLesson"
        app:layout_constraintTop_toTopOf="@+id/ivHubLesson" />

    <ImageView
        android:id="@+id/ivHubQuiz"
        android:layout_width="120dp"
        android:layout_height="111dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/ivHubLesson"
        app:layout_constraintTop_toBottomOf="@+id/ivHubLesson"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/ivSelectedGroup"
        android:layout_width="327dp"
        android:layout_height="142dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/btnHubNote"
        android:layout_width="177dp"
        android:layout_height="99dp"
        android:onClick="startNoteHomePage"
        android:text="Notes"
        android:background="@drawable/border"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivHubNote"
        app:layout_constraintStart_toStartOf="@+id/btnHubQuiz"
        app:layout_constraintTop_toTopOf="@+id/ivHubNote" />

    <ImageView
        android:id="@+id/ivHubNote"
        android:layout_width="120dp"
        android:layout_height="111dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/ivHubQuiz"
        app:layout_constraintTop_toBottomOf="@+id/ivHubQuiz"
        app:srcCompat="@mipmap/ic_launcher_round" />

</androidx.constraintlayout.widget.ConstraintLayout>