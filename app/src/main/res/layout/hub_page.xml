<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HubController">

    <ImageView
        android:id="@+id/ivHubLesson"
        android:layout_width="124dp"
        android:layout_height="111dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@+id/ivSelectedGroup"
        app:layout_constraintTop_toBottomOf="@+id/ivSelectedGroup"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnHubQuiz"
        android:layout_width="176dp"
        android:layout_height="100dp"
        android:onClick="startQuizHomePage"
        android:text="Quizzes"
        app:layout_constraintBottom_toBottomOf="@+id/ivHubQuiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/ivHubQuiz"
        app:layout_constraintTop_toTopOf="@+id/ivHubQuiz"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnHubLesson"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:onClick="startLessonHomePage"
        android:text="Lessons"
        app:layout_constraintBottom_toBottomOf="@+id/ivHubLesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivHubLesson"
        app:layout_constraintTop_toTopOf="@+id/ivHubLesson" />

    <ImageView
        android:id="@+id/ivHubQuiz"
        android:layout_width="120dp"
        android:layout_height="111dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="82dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHubLesson"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvSelectedGroup"
        android:layout_width="160dp"
        android:layout_height="77dp"
        android:text="Selected Exercise Group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivSelectedGroup"
        app:layout_constraintTop_toTopOf="@+id/ivSelectedGroup" />

    <ImageView
        android:id="@+id/ivSelectedGroup"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

</androidx.constraintlayout.widget.ConstraintLayout>