<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HubController">

    <ImageView
        android:id="@+id/ivHubLesson"
        android:layout_width="124dp"
        android:layout_height="111dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="89dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHubSelectedExerciseGroup"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnHubQuiz"
        android:layout_width="192dp"
        android:layout_height="115dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="54dp"
        android:onClick="startQuizHomePage"
        android:text="Quizzes"
        app:layout_constraintStart_toEndOf="@+id/ivHubQuiz"
        app:layout_constraintTop_toBottomOf="@+id/btnHubLesson" />

    <Button
        android:id="@+id/btnHubLesson"
        android:layout_width="224dp"
        android:layout_height="125dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="89dp"
        android:onClick="startLessonHomePage"
        android:text="Lessons"
        app:layout_constraintStart_toEndOf="@+id/ivHubLesson"
        app:layout_constraintTop_toBottomOf="@+id/tvHubSelectedExerciseGroup" />

    <ImageView
        android:id="@+id/ivHubQuiz"
        android:layout_width="120dp"
        android:layout_height="111dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="82dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHubLesson"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvHubSelectedExerciseGroup"
        android:layout_width="204dp"
        android:layout_height="124dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="70dp"
        android:text="Selected Exercise Group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>