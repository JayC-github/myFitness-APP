<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnResultsToHome"
        android:layout_width="206dp"
        android:layout_height="84dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="49dp"
        android:text="Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNotes" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="314dp"
        android:layout_height="102dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="65dp"
        android:text="Score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivScore" />

    <ImageView
        android:id="@+id/ivScore"
        android:layout_width="322dp"
        android:layout_height="116dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvScoreRating"
        android:layout_width="318dp"
        android:layout_height="72dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Score Rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScore" />

    <TextView
        android:id="@+id/tvNotes"
        android:layout_width="317dp"
        android:layout_height="167dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="39dp"
        android:text="Take notes for self"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScoreRating" />
</androidx.constraintlayout.widget.ConstraintLayout>